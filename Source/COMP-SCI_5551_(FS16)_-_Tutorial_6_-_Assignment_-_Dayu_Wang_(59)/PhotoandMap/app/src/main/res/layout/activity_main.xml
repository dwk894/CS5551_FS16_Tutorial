<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="dayuwang.tutorial6.cs5551fs16.photoandmap.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="COMP-SCI 5551 (FS16)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:textColor="#DC143C"
            tools:paddingBottom="15dp"
            android:textSize="18sp"/>

        <TextView
            android:text="@string/underline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:textColor="#DC143C"
            tools:paddingBottom="20dp"
            android:textSize="21sp" />

        <TextView
            android:text="Dayu Wang (59)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:textColor="#DC143C"
            tools:paddingBottom="15dp"
            android:textSize="18sp"
            android:textStyle="italic"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText2"
            android:hint="Username"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/editText3"
            android:hint="Full Name" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editText4"
            android:hint="Email Address" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText5"
            android:hint="Password" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPostalAddress"
                android:ems="10"
                android:id="@+id/editText7"
                android:layout_weight="1"
                android:hint="Postal Address" />

            <Button
                android:text="Use Current Location"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:id="@+id/button2"
                style="@style/Widget.AppCompat.Button.Colored" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="1">

            <Button
                android:text="TAKE A PICTURE USING CAMERA"
                android:layout_width="312dp"
                android:layout_height="wrap_content"
                android:id="@+id/button4"
                style="@style/Widget.AppCompat.Button.Colored" />

            <Button
                android:text="CHOOSE PROFILE PICTURE IN GALLERY"
                android:layout_width="312dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="121dp"
                android:id="@+id/button3"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                style="@style/Widget.AppCompat.Button.Colored" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:srcCompat="@android:color/holo_green_light"
                android:id="@+id/imageView3" />


        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
